    <div class="container">
      <span class="Title"> <h2>Name</h2></span>
      <span class="Title"> <h2>Category</h2></span>
      <span class="Title"> <h2>Latitude</h2></span>
      <span class="Title"> <h2>Longitude</h2></span>
      <span class="Title"> <h2>Update</h2></span>
      <span class="Title"> <h2>Remove</h2></span>
    </div>
    <% for(var i=0; i < points.length; i++) { %>
      <div>
        <span class="test"><label><%= points[i].name %></label></span>
        <span class="test"><label><%= points[i].category %></label></span>
        <span class="test"><label><%= points[i].latitude %></label></span>
        <span class="test"><label><%= points[i].longitude %></label></span>
        <span class="test"> <input class="update" type="button" value="update "></span>
        <span class="test"> <input class="remove" type="button" value="remove "></span>
      </div>
      <% } %>
  </div>


</body>

</html>